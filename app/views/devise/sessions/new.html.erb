<section class="content components">
  <div class="container">
    <article class="components-content">
      <div class="row">
        <div class="col-xs-6">
          <div class="default-style">
            <h2>Nous avons encore besoin de votre mail :)</h2>
            <img src="http://res.cloudinary.com/dl3nkexul/image/upload/c_scale,w_698/v1512926741/noun_1353954_cc_gzt3e0.png", class="img-responsive">
          </div>
        </div>
        <div class="col-xs-6">
          <div class="default-style">
            <h2>Se connecter</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in"%>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>
